{% extends 'layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="styles/index.css">
    <link rel="stylesheet" href="styles/modal-recipe.css">

{% endblock styles %}

{% block content %}
    <div class="content">
        <header>
            <a href="/"><img src="assets/logo.png" alt="Logo Foodfy"></a>

            <div class="options">
                <a href="/about">Sobre</a>
                <a href="/recipes">Receitas</a>
            </div>
        </header>

        <section id="hero">
            <div class="text">
                <h1>As melhores receitas</h1>
                <h4>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
                </h4>
            </div>
        </section>

        <section id="acessos">
            <h2>Mais acessadas</h2>
            <div class="cards">
                <div class="card">
                    <img src="assets/asinhas.png" alt="Asas de frango">
                    <h4>Triplo bacon burger</h4>
                    <p>por <span>Jorge Relato</span></p>
                </div>

                <div class="card">
                    <img src="assets/doce.png" alt="Docinhos pão-do-céu">
                    <h4>Docinhos pão-do-céu</h4>
                    <p>por <span>Ricardo Golvea</span></p>
                </div>

                <div class="card">
                    <img src="assets/espaguete.png" alt="Espaguete ao alho">
                    <h4>Espaguete ao alho</h4>
                    <p>por <span>Júlia Kinoto</span></p>
                </div>
            </div>
        </section>
    </div>
{% endblock content %}

{% block modal %}
    <div id="modal" class="hide">
        <div class="show">
            <div class="receita"></div>
            <p id="close">Fechar modal</p>
        </div>

    </div>
{% endblock modal %}

{% block scripts %}
    <script src="scripts/recipes-main.js"></script>
{% endblock scripts %}